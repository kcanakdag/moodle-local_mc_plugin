{{!
    @template local_mc_plugin/analytics_dashboard

    Analytics dashboard template using Moodle's native Charts API.

    Context variables required for this template:
    * days - Selected time range in days
    * days_options - Array of time range options
    * summary - Summary statistics object
    * courses - Array of course data
    * users - Array of user data
    * timeline_chart - Rendered timeline chart HTML
    * course_chart - Rendered course chart HTML
    * event_chart - Rendered event distribution chart HTML

    Example context (json):
    {
        "days": 30,
        "summary": {
            "total_events": "1,234",
            "unique_users": "456",
            "active_courses": "78"
        }
    }
}}
<div class="local-mc-analytics">
    {{! Header with time range selector }}
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <a href="{{{settings_url}}}" class="btn btn-outline-secondary btn-sm">
                {{#pix}}i/settings, core, {{#str}}settings{{/str}}{{/pix}}
                {{#str}}settings{{/str}}
            </a>
        </div>
        <div class="btn-group" role="group" aria-label="{{#str}}analytics_timerange, local_mc_plugin{{/str}}">
            {{#days_options}}
            <a href="{{{base_url}}}?days={{value}}" class="btn btn-{{#selected}}primary{{/selected}}{{^selected}}outline-primary{{/selected}}">
                {{label}}
            </a>
            {{/days_options}}
        </div>
    </div>

    {{! Summary cards }}
    <div class="row mb-4">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h2 class="card-title text-primary mb-0">{{summary.total_events}}</h2>
                    <p class="card-text text-muted">{{#str}}analytics_total_events, local_mc_plugin{{/str}}</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h2 class="card-title text-success mb-0">{{summary.unique_users}}</h2>
                    <p class="card-text text-muted">{{#str}}analytics_unique_users, local_mc_plugin{{/str}}</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body text-center">
                    <h2 class="card-title text-info mb-0">{{summary.active_courses}}</h2>
                    <p class="card-text text-muted">{{#str}}analytics_active_courses, local_mc_plugin{{/str}}</p>
                </div>
            </div>
        </div>
    </div>

    {{! Activity Timeline - using Moodle Charts API }}
    {{#timeline_chart}}
    <div class="card mb-4">
        <div class="card-body">
            {{{timeline_chart}}}
        </div>
    </div>
    {{/timeline_chart}}

    <div class="row">
        {{! Events by Course - using Moodle Charts API }}
        <div class="col-lg-6 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    {{#course_chart}}
                    {{{course_chart}}}
                    {{/course_chart}}
                    {{^course_chart}}
                    <p class="text-muted text-center py-5">{{#str}}analytics_no_data, local_mc_plugin{{/str}}</p>
                    {{/course_chart}}
                </div>
            </div>
        </div>

        {{! Event Distribution - using Moodle Charts API }}
        <div class="col-lg-6 mb-4">
            <div class="card h-100">
                <div class="card-body">
                    {{#event_chart}}
                    {{{event_chart}}}
                    {{/event_chart}}
                    {{^event_chart}}
                    <p class="text-muted text-center py-5">{{#str}}analytics_no_data, local_mc_plugin{{/str}}</p>
                    {{/event_chart}}
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        {{! Top Courses Table }}
        <div class="col-lg-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0">{{#str}}analytics_top_courses, local_mc_plugin{{/str}}</h5>
                </div>
                <div class="card-body p-0">
                    {{#has_course_data}}
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>{{#str}}course{{/str}}</th>
                                    <th class="text-right">{{#str}}analytics_events, local_mc_plugin{{/str}}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#courses}}
                                <tr>
                                    <td>
                                        <strong>{{shortname}}</strong>
                                        <br><small class="text-muted">{{name}}</small>
                                    </td>
                                    <td class="text-right">{{count}}</td>
                                </tr>
                                {{/courses}}
                            </tbody>
                        </table>
                    </div>
                    {{/has_course_data}}
                    {{^has_course_data}}
                    <p class="text-muted text-center py-5">{{#str}}analytics_no_data, local_mc_plugin{{/str}}</p>
                    {{/has_course_data}}
                </div>
            </div>
        </div>

        {{! Top Users Table }}
        <div class="col-lg-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h5 class="mb-0">{{#str}}analytics_top_users, local_mc_plugin{{/str}}</h5>
                </div>
                <div class="card-body p-0">
                    {{#has_user_data}}
                    <div class="table-responsive">
                        <table class="table table-striped table-hover mb-0">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>{{#str}}user{{/str}}</th>
                                    <th class="text-right">{{#str}}analytics_events, local_mc_plugin{{/str}}</th>
                                </tr>
                            </thead>
                            <tbody>
                                {{#users}}
                                <tr>
                                    <td>{{rank}}</td>
                                    <td>
                                        <strong>{{fullname}}</strong>
                                        <br><small class="text-muted">{{email}}</small>
                                    </td>
                                    <td class="text-right">{{count}}</td>
                                </tr>
                                {{/users}}
                            </tbody>
                        </table>
                    </div>
                    {{/has_user_data}}
                    {{^has_user_data}}
                    <p class="text-muted text-center py-5">{{#str}}analytics_no_data, local_mc_plugin{{/str}}</p>
                    {{/has_user_data}}
                </div>
            </div>
        </div>
    </div>
</div>
